# Function RAG System Configuration

# API Configuration
API_TITLE="Function RAG System"
API_VERSION="1.0.0"
API_DESCRIPTION="RAG system for storing and querying LLM functions"
DEBUG=false

# Server Configuration
HOST="0.0.0.0"
PORT=8000
WORKERS=1

# Embedding Configuration
EMBEDDING_PROVIDER="deepseek"  # Options: openai, deepseek
EMBEDDING_MODEL="text-embedding-3-large"
DEEPSEEK_API_KEY="your-deepseek-api-key-here"
OPENAI_API_KEY="your-openai-api-key-here"
# EMBEDDING_BASE_URL="https://api.deepseek.com"  # Optional: custom base URL
EMBEDDING_MAX_TOKENS=8191
EMBEDDING_BATCH_SIZE=100

# Storage Configuration
VECTOR_DB_URL="http://localhost:6333"  # Qdrant URL
COLLECTION_NAME="llm_functions"
VECTOR_SIZE=3072  # For text-embedding-3-large
DISTANCE_METRIC="cosine"  # Options: cosine, euclidean, dot

# Retrieval Configuration
RETRIEVAL_TOP_K=50
RETRIEVAL_RERANK_TOP_N=10
RETRIEVAL_SEMANTIC_WEIGHT=0.7
RETRIEVAL_KEYWORD_WEIGHT=0.2
RETRIEVAL_CATEGORY_WEIGHT=0.1
RETRIEVAL_THRESHOLD=0.1
RETRIEVAL_USE_CACHE=true

# Logging Configuration
LOG_LEVEL="INFO"  # Options: DEBUG, INFO, WARNING, ERROR
LOG_FORMAT="standard"  # Options: standard, json

# CORS Configuration
CORS_ORIGINS=["*"]
CORS_METHODS=["GET", "POST", "PUT", "DELETE"]
CORS_HEADERS=["*"]