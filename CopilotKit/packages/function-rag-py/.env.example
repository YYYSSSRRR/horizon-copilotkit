# Function RAG System Configuration

# API Configuration
API_TITLE="Function RAG System"
API_VERSION="1.0.0"
API_DESCRIPTION="RAG system for storing and querying LLM functions"
DEBUG=false

# Server Configuration
HOST="0.0.0.0"
PORT=8000
WORKERS=1

# Embedding Configuration
EMBEDDING_PROVIDER="openai"
EMBEDDING_MODEL="text-embedding-3-large"
EMBEDDING_API_KEY="your-openai-api-key-here"
EMBEDDING_MAX_TOKENS=8191
EMBEDDING_BATCH_SIZE=100

# Storage Configuration
VECTOR_DB_URL="http://localhost:6333"
COLLECTION_NAME="llm_functions"
VECTOR_SIZE=3072
DISTANCE_METRIC="cosine"

# Retrieval Configuration
RETRIEVAL_TOP_K=50
RETRIEVAL_RERANK_TOP_N=10
RETRIEVAL_SEMANTIC_WEIGHT=0.7
RETRIEVAL_KEYWORD_WEIGHT=0.2
RETRIEVAL_CATEGORY_WEIGHT=0.1
RETRIEVAL_THRESHOLD=0.1
RETRIEVAL_USE_CACHE=true

# Logging Configuration
LOG_LEVEL="INFO"
LOG_FORMAT="standard"

# CORS Configuration
CORS_ORIGINS=["*"]
CORS_METHODS=["GET", "POST", "PUT", "DELETE"]
CORS_HEADERS=["*"]