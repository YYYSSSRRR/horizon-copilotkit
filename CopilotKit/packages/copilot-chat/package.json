{
  "name": "copilot-chat-monorepo",
  "version": "1.0.0",
  "description": "CopilotKit Chat - Independent Monorepo with Frontend and Backend",
  "private": true,
  "scripts": {
    "install:all": "npm install && npm run install:backend && npm run install:frontend",
    "install:backend": "cd backend && pip install -r requirements.txt",
    "install:frontend": "cd frontend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && ./venv/bin/python server.py",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "start": "npm run dev",
    "clean": "rm -rf backend/__pycache__ backend/*.pyc backend/venv frontend/node_modules frontend/dist",
    "test": "cd frontend && npm run test",
    "lint": "cd frontend && npm run lint",
    "type-check": "cd frontend && npm run type-check",
    "health": "curl http://localhost:8005/health || echo 'Backend not running'",
    "setup": "./scripts/setup.sh"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "frontend"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0",
    "python": ">=3.9.0"
  },
  "keywords": [
    "copilot",
    "chat",
    "ai",
    "react",
    "python",
    "monorepo",
    "vite",
    "fastapi"
  ],
  "author": "CopilotKit Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/copilot-chat.git"
  }
} 